<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="489.0" prefWidth="802.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.AfficherProjetsParArtistes">
    <children>
        <Label fx:id="labelFX" layoutX="295.0" layoutY="36.0" prefHeight="39.0" prefWidth="212.0" text="Liste des projets" textAlignment="CENTER" textFill="#ffc336">
            <font>
                <Font name="System Bold Italic" size="27.0" />
            </font>
        </Label>
        <ListView fx:id="listView" layoutX="103.0" layoutY="101.0" prefHeight="262.0" prefWidth="646.0" />
        <Button fx:id="updateBTN" layoutX="534.0" layoutY="395.0" mnemonicParsing="false" onAction="#modifierProjet" prefHeight="30.0" prefWidth="110.0" style="-fx-background-color: #4a85c4;" text="Modifier" textFill="#fffefe">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
            <graphic>
                <ImageView fitHeight="22.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/editIcon.png" />
                    </image>
                </ImageView>
            </graphic></Button>
        <Button fx:id="suppBTN" layoutX="345.0" layoutY="395.0" mnemonicParsing="false" onAction="#supprimerProjet" prefHeight="30.0" prefWidth="110.0" style="-fx-background-color: #C62111;" text="Supprimer" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
            <graphic>
                <ImageView fitHeight="22.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/deleteIcon.png" />
                    </image>
                </ImageView>
            </graphic></Button>
        <Button fx:id="AjouterBTN" layoutX="153.0" layoutY="394.0" mnemonicParsing="false" onAction="#ajouterProjet" prefHeight="30.0" prefWidth="110.0" style="-fx-background-color: #11C613;" text="Ajouter" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/AddIcon.png" />
                    </image>
                </ImageView>
            </graphic></Button>
        <ImageView fx:id="refreshICON" fitHeight="22.0" fitWidth="22.0" layoutX="754.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@img/refreshIcone.png" />
            </image>
        </ImageView>
    </children>

</AnchorPane>
