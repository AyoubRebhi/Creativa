<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.Controlleurs.newSideBar"
      fx:id="root" spacing="10" style="-fx-background-color: #2E3B4E;">

    <VBox fx:id="sidebar" style="-fx-background-color: #394963;" minWidth="200">
        <Button fx:id="toggleButton" text="Toggle Sidebar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <TextField promptText="User" style="-fx-padding: 5;"/>
        <TextField promptText="Carte" style="-fx-padding: 5;"/>
        <!-- Ajoutez les autres champs ici -->
    </VBox>

    <VBox fx:id="mainContent" style="-fx-padding: 10;">
        <Button text="Main Content" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
    </VBox>
</VBox>

